<div class=container>
    <div class="border border-dark rounded">
        <h3 class="bg-dark text-white p-3 border border-dark rounded-top">{{ title }}</h3>
        <p class="p-2">{{description}}</p>
        <p class="p-2">Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    {{#if showDelete}}
    <div class=class="d-grid gap-2 d-md-block">
        <div class="py-2">
            <a href="/editpost/{{id}}" class="button btn btn-warning">Edit Post</a>
            {{!-- <button type="submit" id="editPost" class="btn btn-warning">Edit Post</button> --}}
            <button type="submit" id="deletePost" class="btn btn-danger">Delete Post</button>
            <p>You are able to edit / delete this post because you created it.</p>
        </div>
    </div>
    {{/if}}
    {{#if logged_in}}
    <div>
        <form class="form" id="new-comment-form">
            <div class="form-group">
                <label for="comment" class="fw-bold">Add New Comment</label>
                <input class="form-input" type="text" id="comment" name="comment"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit New Comment</button>
            </div>  
        </form>
    </div>
    {{else}}
    <div>
        <p>You must be logged in to add a commment!</p>
    </div>
    {{/if}}
    <h2 class="py-4">Comments</h2>
        <!-- Loop over each object in the projects array -->
        {{!-- {{#each comments as |comment| }} --}}
    {{#each comments}}
    <div class="row mb-1 project">
        <div class="col-md-9 border border-dark rounded my-3">
            <p>
            {{!-- <a href="/post/{{post.id}}">{{comment.comment_text}}</a> --}}
            {{comment_text}}
            </p>
            <p>Created by {{user.name}} on {{format_date date_created}}</p>
            {{!-- <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p> --}}
        </div>
        {{!-- <div class="col-md-7">
            <p>
            {{post.description}}
            </p>
        </div> --}}
        {{/each}}
    </div>
</div>

<script src="../js/post.js"></script>